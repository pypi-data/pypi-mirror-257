{
	"id": "OPCUARevPiServer",
	"version": "1.0",
	"comment": [
		"With this virtual device, the parameters for an OPC UA server can be set. ",
		"This device does not have its own inputs and outputs. Depending on the ",
		"configuration, the existing inputs and outputs are used."
	],
	"screencomment": "OPC UA RevPi Server",
	"size": "1",
	"devicetype": "VIRTUAL",
	"producttype": 24585,
	"actions": [
		{
			"event": "onAdd",
			"action": "/usr/bin/sudo /usr/bin/systemctl --no-block enable --now opcua-revpi-server",
			"active": true
		},
		{
			"event": "onDelete",
			"action": "/usr/bin/sudo /usr/bin/systemctl --no-block disable --now opcua-revpi-server",
			"active": true
		}
	],
